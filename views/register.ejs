<div class="form__container">

    <h1 class="page__headline">Register</h1>

 
    <% if(locals.errors){  %>
        <% locals.errors.forEach((error) => { %>
            <h1 class="error__message"><%= error %></h1>
        <% })  %>

       
    <%  } %>



    <form action="/register" method="POST" class="form">
        <div class="form-group">
            <input type="text" class="form-control" name="name" 
            value="<%= locals.name ? name : '' %>"
             placeholder="Enter your name">
        </div>

        <div class="form-group">
            <input type="text" class="form-control" name="username"
             value="<%= locals.username ? username : '' %>"
            placeholder="Enter your username">
        </div>

        <div class="form-group">
            <input type="password" class="form-control" name="password"
             value="<%= locals.password ? password : '' %>"
             placeholder="Enter your password">
        </div>

        <div class="form-group">
            <input type="password" class="form-control" name="confirmPassword" value="<%= locals.confirmPassword ? confirmPassword : '' %>"
             placeholder="Confirm password">
        </div>


      <div class="center__a_btn">
        <button class="btn btn__primary" type="submit">Register</button>
      </div>
    </form>

</div>